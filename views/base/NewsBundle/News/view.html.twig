{% extends "@front/layout.html.twig" %}
{% block seo %}
    {{ parent() }}
    <meta name="keywords" content="{{ news.translate.keywords }}">
    <meta name="description" content="{{ news.translate.description }}">
{% endblock %}
{% block content %}
    <section>
        <!-- less: s_breadcrumbs.less -->
        <figure class="breadCrumbs">
            <nav>
                <span><a href="{{ path('front_homepage') }}">VulkanoGames</a></span>
                <span><a href="{{ path('news_list') }}">{{ 'Новости'|trans({}, 'news') }}</a></span>
                <span>{{ news.translate.name }}</span>
            </nav>
        </figure>

        <!-- less: s_news-one.less -->
        <figure class="news-one">
            <article>
                <header>
                    <h2>{{ news.translate.name }}</h2>
                </header>
                <span class="newsDate">{{ news.date|format_date }}</span>
               {{ news.translate.content|markup }}
                <footer>
                    <a href="{{ path('news_list') }}">{{ 'К полному списку новостей'|trans({}, 'news') }}</a>
                </footer>
            </article>
        </figure>
        <!-- less: s_seotext.less -->
        {% include "@front/layout/seo_text.html.twig" %}
        <!--end less: s_seotext.less -->
    </section>
{% endblock %}