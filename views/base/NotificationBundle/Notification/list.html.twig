{% extends "@front/layout.html.twig" %}
{% block seo %}
    {{ parent() }}
    <title>{{ 'Notifications'|trans({}, 'notification') }}</title>

{% endblock %}
{% block content %}


    <section>
        <!-- less: s_breadcrumbs.less -->

        {#{% include "@front/layout/breadCrumbs.html.twig" %}#}
        <!-- less: s_news-one.less -->

        <!-- less: s_news-list.less -->


        <figure class="my_bonuses">
            <header>
                <h1>{{ 'Notifications'|trans({}, 'notification') }}</h1>
            </header>


            <article>


                <section class="table_block" >
                    <table width="100%">
                        <thead>
                        <tr>
                            <td style="width: 300px;">{{'date'|trans }}:</td>
                            <td style="">{{'header'|trans }}:</td>

                        </tr>
                        </thead>
                        <tbody>

    {% for notification in notifications %}
                            <tr>
                                <td>{{ notification.date|date('d.m.Y H:i') }}</td>
                                <td>
                                    <a href="{{ path('profile_notifications_view', {id: notification.id}) }}">
                                        {% if notification.is_read %}
                                            {{ notification.title }}
                                        {% else %}
                                            <b>{{ notification.title }}</b>
                                        {% endif %}
                                    </a>

                                </td>


                            </tr>
    {% endfor %}

                        </tbody>
                    </table>
                </section>
            </article>
            <nav class="paginator">
                {{ knp_pagination_render(notifications) }}
            </nav>
        </figure>


        <!--end less: s_news-list.less -->
        {% include "@front/layout/right_cabinet_menu.html.twig" %}
        <div style="clear:both;"></div>


        <!-- less: s_seotext.less -->
        {% include "@front/layout/seo_text.html.twig" %}
        <!--end less: s_seotext.less -->
    </section>
    <!--end less: s_seotext.less -->
{% endblock %}